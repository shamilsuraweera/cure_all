generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum GlobalRole {
  ROOT_ADMIN
  USER
}

enum OrgType {
  HOSPITAL
  CLINIC
  PHARMACY
  LAB
}

enum OrgRole {
  ORG_ADMIN
  DOCTOR
  PHARMACIST
  LAB_TECH
  STAFF
}

enum OrgStatus {
  ACTIVE
  SUSPENDED
}

model User {
  id           String     @id @default(uuid())
  email        String     @unique
  passwordHash String
  globalRole   GlobalRole @default(USER)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  orgMemberships OrgMember[]
  providerProfile ProviderProfile?
  patientProfile PatientProfile?
  guardianLinks GuardianLink[] @relation("GuardianUser")
  patientLinks  GuardianLink[] @relation("GuardianPatient")
}

model Organization {
  id        String    @id @default(uuid())
  name      String
  type      OrgType
  domain    String?
  status    OrgStatus @default(ACTIVE)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  members   OrgMember[]
  invites   OrgInvite[]
}

model OrgMember {
  id        String   @id @default(uuid())
  userId    String
  orgId     String
  role      OrgRole
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User         @relation(fields: [userId], references: [id])
  org  Organization @relation(fields: [orgId], references: [id])

  @@unique([userId, orgId])
}

model ProviderProfile {
  id        String   @id @default(uuid())
  userId    String   @unique
  licenseNo String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model PatientProfile {
  id        String   @id @default(uuid())
  userId    String   @unique
  nic       String   @unique
  name      String?
  age       Int?
  location  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

enum GuardianStatus {
  PENDING
  ACTIVE
}

model GuardianLink {
  id         String         @id @default(uuid())
  patientId  String
  guardianId String
  status     GuardianStatus @default(PENDING)
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  patient  User @relation("GuardianPatient", fields: [patientId], references: [id])
  guardian User @relation("GuardianUser", fields: [guardianId], references: [id])

  @@unique([patientId, guardianId])
  @@index([guardianId])
}

enum InviteStatus {
  PENDING
  ACCEPTED
  EXPIRED
}

model OrgInvite {
  id        String       @id @default(uuid())
  orgId     String
  email     String
  role      OrgRole
  token     String       @unique
  status    InviteStatus @default(PENDING)
  expiresAt DateTime
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  org Organization @relation(fields: [orgId], references: [id])

  @@index([orgId])
  @@index([email])
}
