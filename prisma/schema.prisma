generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum GlobalRole {
  ROOT_ADMIN
  USER
}

enum OrgType {
  HOSPITAL
  CLINIC
  PHARMACY
  LAB
}

enum OrgRole {
  ORG_ADMIN
  DOCTOR
  PHARMACIST
  LAB_TECH
  STAFF
}

enum OrgStatus {
  ACTIVE
  SUSPENDED
}

model User {
  id           String     @id @default(uuid())
  email        String     @unique
  passwordHash String
  globalRole   GlobalRole @default(USER)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  orgMemberships OrgMember[]
  providerProfile ProviderProfile?
  patientProfile PatientProfile?
  guardianLinks GuardianLink[] @relation("GuardianUser")
  patientLinks  GuardianLink[] @relation("GuardianPatient")
  guardianInvites GuardianInvite[] @relation("GuardianInvitePatient")
  prescriptionsAsPatient Prescription[] @relation("PrescriptionPatient")
  prescriptionsAsDoctor  Prescription[] @relation("PrescriptionDoctor")
  labResultsAsPatient   LabResult[] @relation("LabResultPatient")
  labResultsAsPerformer LabResult[] @relation("LabResultPerformer")
  dispenseRecords DispenseRecord[]
}

model Organization {
  id        String    @id @default(uuid())
  name      String
  type      OrgType
  domain    String?
  status    OrgStatus @default(ACTIVE)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  members   OrgMember[]
  invites   OrgInvite[]
  dispenseRecords DispenseRecord[]
}

model OrgMember {
  id        String   @id @default(uuid())
  userId    String
  orgId     String
  role      OrgRole
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User         @relation(fields: [userId], references: [id])
  org  Organization @relation(fields: [orgId], references: [id])

  @@unique([userId, orgId])
}

model ProviderProfile {
  id        String   @id @default(uuid())
  userId    String   @unique
  licenseNo String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model PatientProfile {
  id        String   @id @default(uuid())
  userId    String   @unique
  nic       String   @unique
  name      String?
  dob       DateTime?
  location  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

enum GuardianStatus {
  PENDING
  ACTIVE
}

enum GuardianInviteStatus {
  PENDING
  ACCEPTED
  EXPIRED
}

model GuardianLink {
  id         String         @id @default(uuid())
  patientId  String
  guardianId String
  status     GuardianStatus @default(PENDING)
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  patient  User @relation("GuardianPatient", fields: [patientId], references: [id])
  guardian User @relation("GuardianUser", fields: [guardianId], references: [id])

  @@unique([patientId, guardianId])
  @@index([guardianId])
}

model GuardianInvite {
  id        String              @id @default(uuid())
  patientId String
  email     String
  token     String              @unique
  status    GuardianInviteStatus @default(PENDING)
  expiresAt DateTime
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt

  patient User @relation("GuardianInvitePatient", fields: [patientId], references: [id])

  @@index([patientId])
  @@index([email])
}

enum InviteStatus {
  PENDING
  ACCEPTED
  EXPIRED
}

enum MedicineForm {
  TABLET
  CAPSULE
  SYRUP
  INJECTION
  CREAM
  OTHER
}

enum PrescriptionStatus {
  ACTIVE
  CANCELLED
  PARTIALLY_DISPENSED
  DISPENSED
}

enum DispenseStatus {
  PARTIAL
  FULL
}

model OrgInvite {
  id        String       @id @default(uuid())
  orgId     String
  email     String
  role      OrgRole
  token     String       @unique
  status    InviteStatus @default(PENDING)
  expiresAt DateTime
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  org Organization @relation(fields: [orgId], references: [id])

  @@index([orgId])
  @@index([email])
}

model Medicine {
  id           String       @id @default(uuid())
  name         String
  genericName  String?
  strength     String?
  form         MedicineForm
  manufacturer String?
  notes        String?
  isActive     Boolean      @default(true)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  prescriptionItems PrescriptionItem[]
}

model Prescription {
  id        String             @id @default(uuid())
  patientId String
  doctorId  String
  notes     String?
  status    PrescriptionStatus @default(ACTIVE)
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt

  patient User @relation("PrescriptionPatient", fields: [patientId], references: [id])
  doctor  User @relation("PrescriptionDoctor", fields: [doctorId], references: [id])
  items   PrescriptionItem[]
  dispenseRecords DispenseRecord[]

  @@index([patientId])
  @@index([doctorId])
}

model PrescriptionItem {
  id             String   @id @default(uuid())
  prescriptionId String
  medicineId     String
  dose           String
  frequency      String
  durationDays   Int
  quantity       Int
  instructions   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  prescription Prescription @relation(fields: [prescriptionId], references: [id])
  medicine     Medicine     @relation(fields: [medicineId], references: [id])
  dispenseItems DispenseItem[]

  @@index([prescriptionId])
  @@index([medicineId])
}

model DispenseRecord {
  id            String         @id @default(uuid())
  prescriptionId String
  dispensedById String
  pharmacyOrgId String
  status        DispenseStatus
  notes         String?
  createdAt     DateTime       @default(now())

  prescription Prescription @relation(fields: [prescriptionId], references: [id])
  dispensedBy  User         @relation(fields: [dispensedById], references: [id])
  pharmacyOrg  Organization @relation(fields: [pharmacyOrgId], references: [id])
  items        DispenseItem[]

  @@index([prescriptionId])
  @@index([dispensedById])
  @@index([pharmacyOrgId])
}

model DispenseItem {
  id              String   @id @default(uuid())
  dispenseRecordId String
  prescriptionItemId String
  quantity        Int
  createdAt       DateTime @default(now())

  dispenseRecord   DispenseRecord   @relation(fields: [dispenseRecordId], references: [id])
  prescriptionItem PrescriptionItem @relation(fields: [prescriptionItemId], references: [id])

  @@index([dispenseRecordId])
  @@index([prescriptionItemId])
}

model LabTestType {
  id          String   @id @default(uuid())
  name        String
  code        String?  @unique
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  measures LabMeasureDef[]
  results  LabResult[]
}

model LabMeasureDef {
  id             String   @id @default(uuid())
  labTestTypeId  String
  name           String
  unit           String?
  normalRangeMin Float?
  normalRangeMax Float?
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  labTestType LabTestType @relation(fields: [labTestTypeId], references: [id])
  values      LabMeasureValue[]

  @@index([labTestTypeId])
}

model LabResult {
  id            String   @id @default(uuid())
  patientId     String
  labTestTypeId String
  performedById String
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  patient     User        @relation("LabResultPatient", fields: [patientId], references: [id])
  labTestType LabTestType @relation(fields: [labTestTypeId], references: [id])
  performedBy User        @relation("LabResultPerformer", fields: [performedById], references: [id])
  measures    LabMeasureValue[]
  attachments LabAttachment[]

  @@index([patientId])
  @@index([labTestTypeId])
  @@index([performedById])
}

model LabMeasureValue {
  id              String   @id @default(uuid())
  labResultId     String
  labMeasureDefId String
  value           String
  unit            String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  labResult     LabResult     @relation(fields: [labResultId], references: [id])
  labMeasureDef LabMeasureDef @relation(fields: [labMeasureDefId], references: [id])

  @@index([labResultId])
  @@index([labMeasureDefId])
}

model LabAttachment {
  id          String   @id @default(uuid())
  labResultId String
  fileName    String
  url         String
  mimeType    String?
  sizeBytes   Int?
  createdAt   DateTime @default(now())

  labResult LabResult @relation(fields: [labResultId], references: [id])

  @@index([labResultId])
}
